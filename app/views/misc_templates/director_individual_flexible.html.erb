<h1>
  Director #<%= params.fetch(:director_id) %> details
</h1>

<a href="/directors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @individual_director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @individual_director.dob %> 
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @individual_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @individual_director.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @individual_director.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @individual_director.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @director_filmography.each do |a_movie_of_director| %>
    <tr>
      <td>
        <%= a_movie_of_director.id %>
      </td>

      <td>
        <img src="<%= a_movie_of_director.image %>" style="width:250px;">
      </td>

      <td>
        <%= a_movie_of_director.title %>
      </td>

      <td>
        <%= a_movie_of_director.year %>
      </td>

      <td>
        <%= @individual_director.name %>
      </td>

      <td>
        <a href="/movies/<%= a_movie_of_director.id %>">
          Show details
        </a>
      </td>
    </tr>

  <% end %>
</table>
